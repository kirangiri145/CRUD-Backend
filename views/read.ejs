<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Users</title>
    <link rel="stylesheet" href="/stylesheet/style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-zinc-900 text-white">
    <div class="min-h-screen w-full p-5 sm:p-10">

      <div class="w-full flex justify-center mb-6">
        <a class="text-blue-500 text-base sm:text-lg hover:underline" href="/">‚Üê Back To Home</a>
      </div>
      <h1 class="text-2xl sm:text-3xl mb-8 font-semibold tracking-tight text-center">All Users</h1>
      <div class="flex flex-wrap gap-6 justify-center">
        <% if (users.length > 0) { %>
          <% users.forEach(function(user) { %>
            <div class="w-full sm:w-72 p-4 bg-zinc-800 rounded-xl shadow-md">
              
              <div class="w-full h-72 rounded-lg bg-zinc-700 overflow-hidden">
                <img
                  class="w-full h-full object-cover object-top"
                  src="<%= user.image %>"
                  alt="<%= user.name %>"
                />
              </div>
              <div class="mt-4">
                <h3 class="text-xl font-medium tracking-tight truncate"><%= user.name %></h3>
                <p class="text-zinc-400 text-sm break-words"><%= user.email %></p>
              </div>
              <div class="flex justify-between mt-4">
                <a class="text-blue-400 hover:underline" href="/edit/<%= user._id %>">Edit</a>
                <a class="text-red-500 hover:underline" href="/delete/<%= user._id %>">Delete</a>
              </div>
            </div>
          <% }) %>
        <% } else { %>
          <h3 class="text-zinc-400 text-center w-full">No User Yet.</h3>
        <% } %>
      </div>
    </div>
  </body>
</html>
